<!DOCTYPE html>



<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <title>@ViewBag.Title -Image Classifier</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>



    <style>
        #snackbar {
            visibility: hidden;
            min-width: 400px;
            margin-left: -125px;
            background-color: #333;
            color: #fff;
            text-align: center;
            border-radius: 2px;
            padding: 16px;
            position: fixed;
            z-index: 1;
            left: 50%;
            bottom: 30px;
            font-size: 17px;
            align-content: center;
        }

            #snackbar.show {
                visibility: visible;
                -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
                animation: fadein 0.5s, fadeout 0.5s 2.5s;
            }
    </style>
    <style>
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: darkgray;
            color: white;
            text-align: center;
        }

        .thumbnail {
            position: relative;
            overflow: hidden;
        }

        .caption {
            position: absolute;
            top: 0;
            right: 0;
            background: rgba(66, 139, 202, 0.75);
            width: 100%;
            height: 100%;
            padding: 2%;
            display: none;
            text-align: center;
            color: #fff !important;
        }
    </style>


</head>

<body >
    @*class="my-0 mr-md-auto font-weight-normal"*@
    <h5 id="backimage" style="background-image: url('whiteside_Wondershare.jpg');background-repeat: no-repeat; background-size: cover;height:700px;" />

    <div class="dropdown" style="float:right;color:dodgerblue">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" style="width:150px;">
            Choose Theme
        </button>
        <div class="dropdown-menu" style="font-size:17px">
            <a class="dropdown-item" href="#" id="theme1" style="color:red">Theme 1</a>
            <a class="dropdown-item" href="#" id="theme2" style="color:darkblue">Theme 2</a>
            <a class="dropdown-item" href="#" id="theme3" style="color:rebeccapurple">Theme 3</a>
            @*<div class="dropdown-divider"></div>*@
            <a class="dropdown-item" href="#" id="theme4" style="color:darkorange">Theme 4</a>
        </div>
    </div>
    <div style="height:80px"></div>
    @*<img src="https://boomi.com/wp-content/uploads/wipro-logo.jpg" width="100" height="100" align="left" />*@
    

    
    
    <div class="container body-content" id="mainframe">

        @RenderBody()
        <hr />

        <footer></footer>
    </div>

    <script>
        $("[rel='tooltip']").tooltip();

        $('.thumbnail').hover(
            function () {
                $(this).find('.caption').slideDown(250); //.fadeIn(250)
            },
            function () {
                $(this).find('.caption').slideUp(250); //.fadeOut(205)
            }
        );
    </script>
    <script>
        $(document).ready(function () {
            $("#theme1").click(function () {
                $("#backimage").css("background-image", "url('whiteboth_Wondershare.jpg')");
            });
        });
        $(document).ready(function () {
            $("#theme2").click(function () {
                $("#backimage").css("background-image", "url('veg23.jpg')");
            });
        });
        $(document).ready(function () {
            $("#theme3").click(function () {
                $("#backimage").css("background-image", "url('whiteright_Wondershare.jpg')");
            });
        });
         $(document).ready(function () {
            $("#theme4").click(function () {
                $("#backimage").css("background-image", "url('blue.png')");
            });
        });
    </script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
